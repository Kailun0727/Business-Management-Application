<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_product_quantity_et"
        android:textStyle="bold"
        android:padding="8dp"
        android:text="Product Name"
        />

    <TextView
        android:id="@+id/list_item_product_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_product_name"
        android:layout_toLeftOf="@id/list_item_product_quantity_et"
        android:layout_alignBaseline="@id/btn_edit"
        android:padding="8dp"
        android:text="Product Quantity" />

    <EditText
        android:id="@+id/list_item_product_quantity_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:hint="Enter new quantity"
        android:padding="4dp"/>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_item_product_quantity"
        android:layout_below="@id/list_item_product_quantity_et"
        android:padding="4dp"
        android:text="Update"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTextView"
        android:layout_below="@id/list_item_product_quantity"
        android:layout_marginTop="10dp"/>

</RelativeLayout>